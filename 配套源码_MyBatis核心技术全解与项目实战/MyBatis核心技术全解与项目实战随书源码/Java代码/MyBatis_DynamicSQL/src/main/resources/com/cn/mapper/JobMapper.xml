<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cn.mapper.JobMapper">


    <!-- 测试动态SQL语句if -->
    <select id="queryJobWithIf" resultType="Job">
        select * from job where 1=1
        <if test="kind !=null and kind !='' ">
            and kind=#{kind}
        </if>
        <if test="product !=null and product !='' ">
            and product=#{product}
        </if>
        <if test="property !=null and property !='' ">
            and property=#{property}
        </if>
        <if test="adress !=null and adress !='' ">
            and adress=#{adress}
        </if>
    </select>

    <select id="queryJobWithWhere" resultType="Job">
        select * from job
        <where>
        <if test="kind !=null and kind !='' ">
            and kind=#{kind}
        </if>
        <if test="product !=null and product !='' ">
            and product=#{product}
        </if>
        <if test="property !=null and property !='' ">
            and property=#{property}
        </if>
        <if test="adress !=null and adress !='' ">
            and adress=#{adress}
        </if>
        </where>
    </select>

</mapper>